{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
     "composite": true,
     "module": "preserve",
     "moduleResolution": "node",
     "sourceMap": false,
     "strict": true,
     "pretty": true,
     "target": "ES2020",
     "outDir": "./dist/npm",
     "declaration": true,
     "declarationMap": true,
     "noImplicitAny": true,
     "noUnusedLocals": true,
     "removeComments": false,
     "preserveConstEnums": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "preserveSymlinks": true
   },
   "include": [
     "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.json"
   ],
}
